{% extends 'base.html.twig' %}

{% block title %}Latest Categories{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Add Bootstrap stylesheet link #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block body %}
<div class="container mt-4">
    {% if categories is not empty %}
        <h1 class="mb-4">The lastest Categories !</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for categorie in categories %}
                <div class="col mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ categorie.titre }}</h5>
                            <a href="{{ path('detail_categorie', {'id': categorie.id}) }}" class="btn btn-primary">Voir</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <h1>Aucune catégorie n'a été trouvée.</h1>
    {% endif %}
</div>
{% endblock %}
